                  <!-- <label for="exampleFormControlTextarea1">Example textarea</label> -->
                  <textarea class="form-control-textarea" name="test_cipher_text" placeholder="Cipher text giriniz." id="exampleFormControlTextarea1" rows="4"><% if( typeof dec_cipher_text != 'undefined'){ %><%= dec_cipher_text %><% } %></textarea>
                </div>
                
              </blockquote>
            </div>
          </div>
        </div>
      </div>
      
      

      <div class="row list-row">
        <div class="col col-12">
          <div class="card card-cpryt3">
            <div class="card-header">
              <h4>Key</h4>
            </div>
            <div class="card-body">
              <blockquote class="blockquote mb-0">
                
                <div class="form-group">
                  <textarea class="form-control-textarea" name="test_key" placeholder="Keyi giriniz." id="exampleFormControlTextarea1" rows="2"><% if( typeof dec_key != 'undefined'){ %><%= dec_key %><% } %></textarea>
                </div>
                
              </blockquote>
            </div>
          </div>
        </div>
      </div>

      
      <button type="submit" class="my-btn btn-success">Decrypt</button>


      
      
      <% if ( typeof dec_plain_text != "undefined" ) { %>
      <div id="result_plain" class="row">
        <div class="col col-12">
          <div class="card card-cpryt3">
            <div class="card-header">
              <h4>Plain Text</h4>
            </div>
            <div class="card-body">
              <blockquote class="blockquote mb-0">

                <p><%= dec_plain_text%></p>

              </blockquote>
            </div>
          </div>
        </div>
      </div>
      <% } %>
      
    </form>
  </div>

