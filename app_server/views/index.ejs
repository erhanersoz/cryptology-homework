<div class="container page-container" >

  <% if ( typeof status != "undefined" ) { %>
    <div class="alert alert-<%= type%> <%= status%>" role="alert">
      <span class="" ><%= message%></span>
    </div>            
  <% } %>

  <div class="main-row">
    <h1>Encryption Test</h1>

    <form action="/" method="POST">
      <input type="hidden" name="processType" value="encryption">
      <div class="row list-row">
        <div class="col col-12">
          <div class="card card-cpryt3">
            <div class="card-header">
              <h4>Plain Text</h4>
            </div>
            <div class="card-body">
              <blockquote class="blockquote mb-0">
                
                <div class="form-group">
                  <!-- <label for="exampleFormControlTextarea1">Example textarea</label> -->
                <textarea class="form-control-textarea" name="test_plain_text" placeholder="Plain text giriniz." id="exampleFormControlTextarea1" rows="4"><% if( typeof enc_plain_text != 'undefined'){ %><%= enc_plain_text %><% } %></textarea>
                </div>
                
              </blockquote>
            </div>
          </div>
        </div>
      </div>
      

      <div class="row list-row">
        <div class="col col-12">
          <div class="card card-cpryt3">
            <div class="card-header">
              <h4>Key</h4>
            </div>
            <div class="card-body">
              <blockquote class="blockquote mb-0">
                
                <div class="form-group">
                  <textarea class="form-control-textarea" name="test_key" placeholder="Keyi giriniz." id="exampleFormControlTextarea1" rows="2"><% if( typeof enc_key != 'undefined'){ %><%= enc_key %><% } %></textarea>
                </div>
                
              </blockquote>
            </div>
          </div>
        </div>
      </div>

      
      <button type="submit" class="my-btn btn-success">Encrypt</button>


      
      <% if ( typeof enc_cipher_text != "undefined" ) { %>
      <div id="result_cipher" class="row">
        <div class="col col-12">
          <div class="card card-cpryt3">
            <div class="card-header">
              <h4>Cipher Text</h4>
            </div>
            <div class="card-body">
              <blockquote class="blockquote mb-0">

                <p><%= enc_cipher_text%></p>

              </blockquote>
            </div>
          </div>
        </div>
      </div>
      <% } %>
      
    </form>
  </div>

  <div class="main-row">
    <h1>Decryption Test</h1>
  
    <form action="/" method="POST">
      <input type="hidden" name="processType" value="decryption">
      <div class="row list-row">
        <div class="col col-12">
          <div class="card card-cpryt3">
            <div class="card-header">
              <h4>Cipher Text</h4>
            </div>
            <div class="card-body">
